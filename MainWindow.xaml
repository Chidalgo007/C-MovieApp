<Window
    x:Class="MovieLibrary.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MovieLibrary"
    AllowsTransparency="True"
    Background="#222"
    WindowState="Maximized"
    WindowStyle="None">

    <!--  Custom Style for buttons inside tab content  -->
    <Window.Resources>
        <Style x:Key="InnerTabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="3" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="Bd"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!--  Hover  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#444" />
                            </Trigger>
                            <!--  Pressed  -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#666" />
                            </Trigger>
                            <!--  Disabled  -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  ComboBox style similar to rounded buttons  -->
        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#333" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="3" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border
                                x:Name="Bd"
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                                <ContentPresenter
                                    x:Name="ContentSite"
                                    Margin="5,0,25,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="{TemplateBinding SelectionBoxItem}"
                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" />
                            </Border>

                            <ToggleButton
                                Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Focusable="False"
                                IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                                <Path
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="M 0 0 L 4 4 L 8 0 Z"
                                    Fill="White" />
                            </ToggleButton>

                            <Popup
                                x:Name="PART_Popup"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                Placement="Bottom"
                                PopupAnimation="Slide">
                                <Border
                                    Background="#333"
                                    BorderBrush="Gray"
                                    BorderThickness="1"
                                    CornerRadius="10">
                                    <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#444" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <!--  Custom TabControl with centered tabs and close button  -->
        <TabControl
            x:Name="MainTabs"
            Margin="3"
            Background="#222"
            DockPanel.Dock="Top"
            Foreground="White">
            <TabControl.Template>
                <ControlTemplate TargetType="TabControl">
                    <DockPanel>
                        <!--  Header row  -->
                        <Grid Background="#222" DockPanel.Dock="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <!--  left filler  -->
                                <ColumnDefinition Width="Auto" />
                                <!--  tabs centered  -->
                                <ColumnDefinition Width="*" />
                                <!--  right filler  -->
                            </Grid.ColumnDefinitions>
                            <!--  Tabs centered  -->
                            <TabPanel
                                x:Name="HeaderPanel"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                Panel.ZIndex="1"
                                Background="#222"
                                IsItemsHost="True" />

                            <!--  Close button on far right  -->
                            <Button
                                x:Name="CloseButton"
                                Grid.Column="2"
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                BorderThickness="0"
                                Click="CloseButton_Click"
                                Content="✖"
                                Focusable="False"
                                FontSize="14"
                                Foreground="DarkRed">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <!--  base appearance  -->
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="Foreground" Value="DarkRed" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Cursor" Value="Hand" />
                                        <!--  simplify the visual tree so system chrome can't interfere  -->
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="0"
                                                        SnapsToDevicePixels="True">
                                                        <ContentPresenter
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            RecognizesAccessKey="True" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>

                        <!--  Tab Content  -->
                        <ContentPresenter
                            x:Name="PART_SelectedContentHost"
                            Margin="0"
                            ContentSource="SelectedContent" />
                    </DockPanel>
                </ControlTemplate>
            </TabControl.Template>
            <!--  Round TabItem Style TOP ROW  -->
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border
                                    x:Name="Bd"
                                    Margin="5"
                                    Padding="5"
                                    Background="#333"
                                    BorderBrush="Gray"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Opacity="0.6">
                                    <ContentPresenter
                                        x:Name="Content"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        ContentSource="Header" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <!--  Selected tab  -->
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#555" />
                                        <Setter TargetName="Bd" Property="BorderBrush" Value="White" />
                                    </Trigger>
                                    <!--  Hover tab  -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#444" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <!--  Movies Tab  -->
            <TabItem
                Width="100"
                Height="50"
                FontSize="16"
                Foreground="White"
                Header="🎬 Movies">
                <DockPanel>
                    <!--  Top controls  -->
                    <Grid Background="#222" DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <!--  left filler  -->
                            <ColumnDefinition Width="*" />
                            <!--  tabs centered  -->
                            <ColumnDefinition Width="*" />
                            <!--  right filler  -->
                        </Grid.ColumnDefinitions>
                        <!--  label movie count left  -->
                        <TextBlock
                            x:Name="MovieCountLabel"
                            Grid.Column="0"
                            Margin="10"
                            DockPanel.Dock="Top"
                            FontSize="12"
                            Foreground="LightGray" />
                        <!--  Search box centered  -->
                        <Border
                            Grid.Column="1"
                            Width="350"
                            Margin="10"
                            Background="#333"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  Search Icon  -->
                                <TextBlock
                                    Grid.Column="0"
                                    Margin="8,0,5,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="Gray"
                                    Text="🔍" />

                                <!--  TextBox  -->
                                <TextBox
                                    x:Name="MovieSearchBox"
                                    Grid.Column="1"
                                    Padding="0,5,8,5"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    CaretBrush="White"
                                    FontSize="14"
                                    Foreground="White"
                                    TextChanged="MovieSearch_TextChanged" />

                                <!--  Placeholder Text  -->
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Foreground="Gray"
                                    IsHitTestVisible="False"
                                    Text="Search movies...">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=MovieSearchBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                        <!--  buttons right  -->
                        <StackPanel
                            Grid.Column="2"
                            Height="40"
                            Background="#222"
                            DockPanel.Dock="Top"
                            Orientation="Horizontal">
                            <!--  Filter  -->
                            <ComboBox
                                x:Name="MovieFilter"
                                Width="60"
                                Margin="40,5,5,5"
                                FontSize="12"
                                SelectionChanged="MovieFilter_Changed"
                                Style="{StaticResource RoundedComboBoxStyle}">
                                <ComboBoxItem Content="All" IsSelected="True" />
                                <ComboBoxItem Content="Kids" />
                                <ComboBoxItem Content="Horror" />
                                <ComboBoxItem Content="Asian" />
                                <ComboBoxItem Content="Movies" />
                            </ComboBox>
                            <Button
                                Width="80"
                                Margin="3"
                                Click="AddMoviesFolder_Click"
                                Content="➕ Add Folder"
                                FontSize="12"
                                Style="{StaticResource InnerTabButtonStyle}" />
                            <Button
                                Width="80"
                                Margin="3"
                                Click="RescanMovies_Click"
                                Content="♻️ Rescan"
                                FontSize="12"
                                Style="{StaticResource InnerTabButtonStyle}" />
                            <Button
                                Width="80"
                                Margin="3"
                                Click="ClearMovies_Click"
                                Content="🗑 Clear"
                                FontSize="12"
                                Style="{StaticResource InnerTabButtonStyle}" />
                        </StackPanel>
                    </Grid>

                    <!--  Centered Grid  -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="MovieGrid">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type local:MovieItem}">
                                    <StackPanel Margin="5" MouseLeftButtonDown="Poster_Click">
                                        <Image
                                            Width="160"
                                            Height="235"
                                            Source="{Binding PosterPath}"
                                            Stretch="UniformToFill">
                                            <Image.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Click="ReplacePoster_Click" Header="Replace Poster..." />
                                                    <MenuItem Click="ResetPoster_Click" Header="Reset to Original" />
                                                </ContextMenu>
                                            </Image.ContextMenu>
                                        </Image>
                                        <TextBlock
                                            Width="160"
                                            FontSize="12"
                                            Foreground="White"
                                            Text="{Binding DisplayTitle}"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </TabItem>

            <!--  Series Tab  -->
            <TabItem
                Width="100"
                Height="50"
                FontSize="16"
                Foreground="White"
                Header="📺 Series">
                <DockPanel>
                    <!--  Top controls  -->
                    <Grid Background="#222" DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <!--  left filler  -->
                            <ColumnDefinition Width="*" />
                            <!--  tabs centered  -->
                            <ColumnDefinition Width="*" />
                            <!--  right filler  -->
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Column="1"
                            Height="40"
                            Background="#222"
                            DockPanel.Dock="Top"
                            Orientation="Horizontal">
                            <Button
                                Width="100"
                                Margin="3"
                                Click="AddSeriesFolder_Click"
                                Content="➕ Add Folder"
                                Style="{StaticResource InnerTabButtonStyle}" />
                            <Button
                                Width="100"
                                Margin="3"
                                Click="RescanSeries_Click"
                                Content="♻️ Rescan"
                                Style="{StaticResource InnerTabButtonStyle}" />
                            <Button
                                Width="100"
                                Margin="3"
                                Click="ClearSeries_Click"
                                Content="🗑 Clear"
                                Style="{StaticResource InnerTabButtonStyle}" />
                            <Button
                                x:Name="SeriesBackButton"
                                Width="100"
                                Margin="3"
                                Click="SeriesBackButton_Click"
                                Content="⬅ Back"
                                Style="{StaticResource InnerTabButtonStyle}"
                                Visibility="Collapsed" />
                        </StackPanel>
                    </Grid>
                    <ContentControl x:Name="SeriesContentArea">
                        <ItemsControl x:Name="SeriesGrid">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type local:SeriesItem}">
                                    <StackPanel Margin="5" MouseLeftButtonDown="SeriesPoster_Click">
                                        <Image
                                            Width="160"
                                            Height="235"
                                            Source="{Binding PosterPath}"
                                            Stretch="UniformToFill">
                                            <Image.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Click="ReplacePoster_Click" Header="Replace Poster..." />
                                                    <MenuItem Click="ResetPoster_Click" Header="Reset to Original" />
                                                </ContextMenu>
                                            </Image.ContextMenu>
                                        </Image>
                                        <TextBlock
                                            Width="155"
                                            Text="{Binding Title}"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ContentControl>
                </DockPanel>
            </TabItem>

            <!--  Anime Tab  -->
            <TabItem
                Width="100"
                Height="50"
                FontSize="16"
                Foreground="White"
                Header="🎌 Anime">
                <DockPanel>
                    <!--  Top controls  -->
                    <Grid Background="#222" DockPanel.Dock="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <!--  left filler  -->
                            <ColumnDefinition Width="*" />
                            <!--  tabs centered  -->
                            <ColumnDefinition Width="*" />
                            <!--  right filler  -->
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Column="0"
                            Height="40"
                            Background="#222"
                            DockPanel.Dock="Top"
                            Orientation="Horizontal">
                            <Button
                                Width="100"
                                Margin="3"
                                Click="AddAnimeFolder_Click"
                                Content="➕ Add Folder"
                                Style="{StaticResource InnerTabButtonStyle}" />
                            <Button
                                Width="100"
                                Margin="3"
                                Click="RescanAnime_Click"
                                Content="♻️ Rescan"
                                Style="{StaticResource InnerTabButtonStyle}" />
                            <Button
                                Width="100"
                                Margin="3"
                                Click="ClearAnime_Click"
                                Content="🗑 Clear"
                                Style="{StaticResource InnerTabButtonStyle}" />
                            <Button
                                x:Name="AnimeBackButton"
                                Width="100"
                                Margin="3"
                                Click="AnimeBackButton_Click"
                                Content="⬅ Back"
                                Style="{StaticResource InnerTabButtonStyle}"
                                Visibility="Collapsed" />
                        </StackPanel>
                    </Grid>
                    <ContentControl x:Name="AnimeContentArea">
                        <ItemsControl x:Name="AnimeGrid">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type local:SeriesItem}">
                                    <StackPanel Margin="5" MouseLeftButtonDown="AnimePoster_Click">
                                        <Image
                                            Width="160"
                                            Height="235"
                                            Source="{Binding PosterPath}"
                                            Stretch="UniformToFill">
                                            <Image.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Click="ReplacePoster_Click" Header="Replace Poster..." />
                                                    <MenuItem Click="ResetPoster_Click" Header="Reset to Original" />
                                                </ContextMenu>
                                            </Image.ContextMenu>
                                        </Image>
                                        <TextBlock
                                            Width="155"
                                            Text="{Binding Title}"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ContentControl>
                </DockPanel>
            </TabItem>

            <!--  End Anime Tab  -->
        </TabControl>
    </DockPanel>
</Window>
