<Window x:Class="MovieLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MovieLibrary"
        Title="My Movie Library" Height="800" Width="1200"
        Background="#111">
    <DockPanel>
        <TabControl x:Name="MainTabs" Background="#111" Foreground="White">
            <!-- Movies Tab -->
            <TabItem Header="🎬 Movies">
                <DockPanel>
                    <!-- Top controls -->
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#222" Height="50">
                        <Button Content="➕ Add Folder" Width="120" Margin="5" Click="AddMoviesFolder_Click"/>
                        <Button Content="♻️ Rescan" Width="100" Margin="5" Click="RescanMovies_Click"/>
                        <Button Content="🗑 Clear" Width="100" Margin="5" Click="ClearMovies_Click"/>
                        
                        <!-- Filter -->
                        <ComboBox x:Name="MovieFilter" Width="150" Margin="20,5,5,5" SelectionChanged="MovieFilter_Changed">
                            <ComboBoxItem Content="All" IsSelected="True"/>
                            <ComboBoxItem Content="Kids"/>
                            <ComboBoxItem Content="Horror"/>
                            <ComboBoxItem Content="Asian"/>
                            <ComboBoxItem Content="Movies"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Centered Grid -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="MovieGrid">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <!-- <DataTemplate>
                                    <Border Margin="10" CornerRadius="8" BorderBrush="Gray" BorderThickness="1"
                                            MouseLeftButtonDown="Poster_Click">
                                        <StackPanel Width="150">
                                            <Image Source="{Binding PosterPath}" Height="220" Stretch="UniformToFill"/>
                                            <TextBlock Text="{Binding Title}" TextWrapping="Wrap"
                                                       Foreground="White" FontWeight="Bold"
                                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate> -->
                                <DataTemplate DataType="{x:Type local:MovieItem}">
                                    <StackPanel Margin="5" MouseLeftButtonDown="Poster_Click">
                                        <Image Width="150" Height="225" Stretch="UniformToFill" Source="{Binding PosterPath}" />
                                        <TextBlock Text="{Binding Title}" TextAlignment="Center" Width="150" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>
            </TabItem>

            <!-- Series Tab -->
            <TabItem Header="📺 Series">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="50" Background="#222">
                        <Button Content="➕ Add Folder" Click="AddSeriesFolder_Click" Width="120" Margin="5"/>
                        <Button Content="♻️ Rescan" Click="RescanSeries_Click" Width="100" Margin="5"/>
                        <Button Content="🗑 Clear" Click="ClearSeries_Click" Width="100" Margin="5"/>
                        <Button x:Name="SeriesBackButton" Content="⬅ Back" Click="SeriesBackButton_Click" Width="100" Margin="5" Visibility="Collapsed"/>
                    </StackPanel>

                    <ContentControl x:Name="SeriesContentArea">
                        <ItemsControl x:Name="SeriesGrid">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type local:SeriesItem}">
                                    <StackPanel Margin="5" MouseLeftButtonDown="SeriesPoster_Click">
                                        <Image Width="150" Height="225" Stretch="UniformToFill" Source="{Binding PosterPath}" />
                                        <TextBlock Text="{Binding Title}" TextAlignment="Center" Width="150" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ContentControl>
                </DockPanel>
            </TabItem>

            <TabItem Header="🎌 Anime">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="50" Background="#222">
                        <Button Content="➕ Add Folder" Click="AddAnimeFolder_Click" Width="120" Margin="5"/>
                        <Button Content="♻️ Rescan" Click="RescanAnime_Click" Width="100" Margin="5"/>
                        <Button Content="🗑 Clear" Click="ClearAnime_Click" Width="100" Margin="5"/>
                        <Button x:Name="AnimeBackButton" Content="⬅ Back" Click="AnimeBackButton_Click" Width="100" Margin="5" Visibility="Collapsed"/>
                    </StackPanel>

                    <ContentControl x:Name="AnimeContentArea">
                        <ItemsControl x:Name="AnimeGrid">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type local:SeriesItem}">
                                    <StackPanel Margin="5" MouseLeftButtonDown="AnimePoster_Click">
                                        <Image Width="150" Height="225" Stretch="UniformToFill" Source="{Binding PosterPath}" />
                                        <TextBlock Text="{Binding Title}" TextAlignment="Center" Width="150" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ContentControl>
                </DockPanel>
            </TabItem>

            <!-- End Anime Tab -->
        </TabControl>
    </DockPanel>
</Window>
