<UserControl
    x:Class="MovieLibrary.SeriesDetailUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <DockPanel Margin="10">
            <Image
                x:Name="PosterImage"
                Width="400"
                Height="600"
                Margin="0,0,10,0"
                DockPanel.Dock="Left" />
            <StackPanel x:Name="SeasonsPanel" />
        </DockPanel>
    </ScrollViewer>
</UserControl>
